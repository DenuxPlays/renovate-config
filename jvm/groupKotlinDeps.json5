{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Groups all Kotlin Gradle Dependencies together",
  "packageRules": [
    {
      "groupName": "Kotlin Dependencies",
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^org\\.jetbrains\\.kotlin.*"
      ]
    }
  ]
}
